<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/orden_nombre"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/orden_telefono"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/orden_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_below="@id/orden_nombre"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/orden_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo y Direccion"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:layout_below="@id/orden_precio"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/orden_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_below="@id/orden_correo"
            android:gravity="center"
            />
        <Button
            android:id="@+id/orden_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botones2"
            android:layout_marginTop="10dp"
            android:text="Ver orden"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"

            android:layout_below="@id/orden_fecha"/>


    </RelativeLayout>

</RelativeLayout>